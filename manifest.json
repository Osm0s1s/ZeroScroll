{
  "manifest_version": 3,
  "name": "Hopper - AI Chat Navigation",
  "version": "1.0.0",
  "description": "Navigate AI chat conversations with an intelligent sidebar",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*",
    "https://claude.ai/*",
    "https://gemini.google.com/*",
    "https://www.kimi.com/*",
    "https://kimi.com/*",
    "https://chat.deepseek.com/*",
    "https://www.deepseek.com/*",
    "https://deepseek.com/*",
    "https://grok.com/*",
    "https://www.grok.com/*",
    "https://*.grok.com/*",
    "https://chat.qwen.ai/*",
    "https://qwen.ai/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://claude.ai/*",
        "https://gemini.google.com/*",
        "https://www.kimi.com/*",
        "https://kimi.com/*",
        "https://chat.deepseek.com/*",
        "https://www.deepseek.com/*",
        "https://deepseek.com/*",
        "https://grok.com/*",
        "https://www.grok.com/*",
        "https://*.grok.com/*",
        "https://chat.qwen.ai/*",
        "https://qwen.ai/*"
      ],
      "js": [
        "platforms/chatgpt.js",
        "platforms/claude.js",
        "platforms/gemini.js",
        "platforms/kimi.js",
        "platforms/deepseek.js",
        "platforms/grok.js",
        "platforms/qwen.js",
        "content.js"
      ],
      "css": [
        "sidebar.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icons/icon-128.png"
    }
  }
}